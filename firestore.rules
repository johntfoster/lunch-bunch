rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users can read/write their own doc
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Groups are readable by any authenticated user
    match /groups/{groupId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;

      // Votes subcollection
      match /votes/{dateId}/ballots/{userId} {
        allow read: if request.auth != null;
        // Users can only create their own ballot (one per day)
        allow create: if request.auth != null && request.auth.uid == userId;
        // No updates or deletes
        allow update, delete: if false;
      }

      // History is read-only for users (written by client when voting closes)
      match /history/{dateId} {
        allow read: if request.auth != null;
        allow create: if request.auth != null;
        allow update, delete: if false;
      }
    }
  }
}
